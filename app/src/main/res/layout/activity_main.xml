<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="%"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/percentButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/equalButton"
            app:layout_constraintTop_toBottomOf="@+id/zeroButton2"/>
    <Button
            android:text="="
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/equalButton"
            app:layout_constraintStart_toEndOf="@+id/percentButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/plusMinusButton"
            app:layout_constraintTop_toTopOf="@+id/percentButton"/>
    <Button
            android:text="+/-"
            android:textSize="40sp"
            android:layout_width="188dp"
            android:layout_height="wrap_content" android:id="@+id/plusMinusButton"
            app:layout_constraintStart_toEndOf="@+id/equalButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/equalButton"/>
    <Button
            android:text="C"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clearButton2"
            app:layout_constraintTop_toTopOf="@+id/pointButton"
            app:layout_constraintStart_toEndOf="@+id/pointButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"/>
    <Button
            android:text="0"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/zeroButton2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/pointButton" app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="+"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/plusButton2"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/clearButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="."
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pointButton2"
            app:layout_constraintTop_toTopOf="@+id/zeroButton"
            app:layout_constraintStart_toEndOf="@+id/zeroButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/clearButton"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="30sp"
            android:text="0"
            android:inputType="textPersonName"
            android:hint="Enter a number"
            android:ems="10"
            android:id="@+id/editTextInputNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="."
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pointButton"
            app:layout_constraintTop_toTopOf="@+id/zeroButton"
            app:layout_constraintStart_toEndOf="@+id/zeroButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/clearButton"/>
    <Button
            android:text="C"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clearButton"
            app:layout_constraintTop_toTopOf="@+id/pointButton"
            app:layout_constraintStart_toEndOf="@+id/pointButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"/>
    <Button
            android:text="0"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/zeroButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/pointButton" app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="+"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/plusButton"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/clearButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="/"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/divideButton"
            app:layout_constraintTop_toTopOf="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button9" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="-"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minusButton"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="x"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/multiplyButton"
            app:layout_constraintTop_toTopOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="8"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/button7"
            app:layout_constraintStart_toEndOf="@+id/button7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button9"/>
    <Button
            android:text="3"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/minusButton"/>
    <Button
            android:text="9"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button9"
            app:layout_constraintTop_toTopOf="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button8" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/divideButton"/>
    <Button
            android:text="2"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button1"
            app:layout_constraintStart_toEndOf="@+id/button1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button3"/>
    <Button
            android:text="5"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@+id/button4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button6"/>
    <Button
            android:text="1"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button1"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="4"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button5" app:layout_constraintTop_toBottomOf="@+id/button7"/>
    <Button
            android:text="6"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/multiplyButton"/>
    <Button
            android:text="7"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button7"
            android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextInputNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button8"/>
</androidx.constraintlayout.widget.ConstraintLayout>